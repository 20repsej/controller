        return 0
    elif [ $RET -eq 0 ]; then
        case "$FUN" in
            A1\ *) do_adafruit_address ;;
            A2\ *) do_adafruit_frequency ;;
            A3\ *) do_more_debug ;;
            *) whiptail --msgbox "Programmer error: Unrecognized option" 20 60 1 ;;
